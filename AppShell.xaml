<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Examen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Examen.Views"
    Title="Examen">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Asistencia"
        ContentTemplate="{DataTemplate local:AsistenciaPage}"
        Route="AsistenciaPage" />

    <ShellContent
        Title="Administrador"
        ContentTemplate="{DataTemplate local:AdminPage}"
        Route="AdminPage" />

    <ShellContent
        Title="Usuarios"
        ContentTemplate="{DataTemplate local:CRUDUsuariosPage}"
        Route="CRUDUsuariosPage" />

    <ShellContent
        Title="Ubicaciones"
        ContentTemplate="{DataTemplate local:CRUDUbicacionesPage}"
        Route="CRUDUbicacionesPage" />
    <ShellContent
        Title="Consulta de Asistencias"
        ContentTemplate="{DataTemplate local:ConsultaAsistenciaPage}"
        Route="ConsultaAsistenciaPage" />
</Shell>
