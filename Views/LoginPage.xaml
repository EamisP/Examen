<ContentPage
    x:Class="Examen.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Inicio de Sesión">

    <StackLayout
        Padding="20"
        Spacing="15"
        VerticalOptions="Center">

        <Label
            FontSize="18"
            HorizontalOptions="Center"
            Text="Ingresa tu correo corporativo" />

        <Entry
            x:Name="CorreoEntry"
            HorizontalOptions="FillAndExpand"
            Keyboard="Email"
            Placeholder="ejemplo@exploraie.com" />

        <!--  Label para mostrar errores de validación  -->
        <Label
            x:Name="ErrorLabel"
            FontSize="14"
            IsVisible="False"
            Text=""
            TextColor="Red" />

        <Button
            x:Name="BtnRegistrar"
            Clicked="OnRegistrarClicked"
            HorizontalOptions="FillAndExpand"
            Text="Registrar Asistencia" />

        <Button
            x:Name="BtnAdmin"
            BackgroundColor="#888"
            Clicked="OnAdminClicked"
            HorizontalOptions="FillAndExpand"
            Text="Ir a panel de administración"
            TextColor="White" />

    </StackLayout>

</ContentPage>
