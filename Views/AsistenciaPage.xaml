    Title="Registro de Asistencia">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Registro de Asistencia" />

            <Label
                x:Name="NombreLabel"
                FontSize="18"
                Text="Nombre del usuario" />
            <Label
                x:Name="MatriculaLabel"
                FontSize="18"
                Text="MatrÃ­cula" />

            <Button Clicked="OnRegistrarAsistenciaClicked" Text="Registrar Asistencia" />

            <Label
                x:Name="MensajeLabel"
                FontAttributes="Italic"
                Text=""
                TextColor="Red" />

            <Image
                x:Name="FotoImage"
                Aspect="AspectFit"
                HeightRequest="200"
                IsVisible="False" />

        </StackLayout>
    </ScrollView>
</ContentPage>
