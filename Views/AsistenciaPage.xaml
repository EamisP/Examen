<ContentPage
    x:Class="Examen.Views.AsistenciaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Registro de Asistencia">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Registro de Asistencia" />

            <!--  Correo corporativo  -->
            <Label
                x:Name="CorreoLabel"
                FontSize="18"
                Text="Correo: " />

            <!--  Estado actual del registro  -->
            <Frame
                x:Name="EstadoFrame"
                Padding="15"
                BackgroundColor="#E8F5E9"
                BorderColor="#4CAF50"
                CornerRadius="10">
                <Label
                    x:Name="EstadoLabel"
                    FontSize="16"
                    HorizontalTextAlignment="Center"
                    Text="Cargando estado..." />
            </Frame>

            <!--  Indicador de modo debug  -->
            <Label
                x:Name="DebugModeLabel"
                FontSize="12"
                IsVisible="False"
                Text="MODO DEBUG ACTIVO"
                TextColor="Orange" />

            <Button
                x:Name="BtnRegistrar"
                Clicked="OnRegistrarAsistenciaClicked"
                Text="Registrar Asistencia" />

            <!--  Indicador de carga  -->
            <ActivityIndicator
                x:Name="LoadingIndicator"
                IsRunning="False"
                IsVisible="False"
                Color="#512BD4" />

            <Label
                x:Name="MensajeLabel"
                FontAttributes="Italic"
                Text=""
                TextColor="Red" />

            <Image
                x:Name="FotoImage"
                Aspect="AspectFit"
                HeightRequest="200"
                IsVisible="False" />

        </StackLayout>
    </ScrollView>
</ContentPage>
